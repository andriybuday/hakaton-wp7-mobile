<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="ShuffleBoard.ucScoreBoard"
	d:DesignWidth="640" d:DesignHeight="480" Width="150" Height="80">

	<Canvas x:Name="LayoutRoot" Height="80" Width="150" Opacity="0.7" >
		<Rectangle Fill="#FF50352C" RadiusY="6" RadiusX="6" Height="80" Width="150"/>
		<StackPanel Height="70" Width="140" Orientation="Horizontal" Canvas.Left="5" Canvas.Top="5">
			<Rectangle Fill="#FF07258B" Width="70" Height="80"/>
			<Rectangle Fill="#FF952F1F" Width="70" Height="80"/>
		</StackPanel>
		<TextBlock Height="19" TextWrapping="Wrap" Text="BLUE" Width="73" Foreground="White" Canvas.Left="5" Canvas.Top="6" TextAlignment="Center" FontSize="13.333"/>
		<TextBlock Height="19" TextWrapping="Wrap" Text="RED" Width="60" Foreground="White" Canvas.Left="82" Canvas.Top="6" TextAlignment="Center" FontSize="13.333"/>
		<TextBlock x:Name="tbBlueScore" TextWrapping="Wrap" Text="0" Width="70" Height="44" Canvas.Left="8" Canvas.Top="31" Foreground="White" TextAlignment="Center" FontSize="32"/>
		<TextBlock x:Name="tbRedScore" TextWrapping="Wrap" Text="0" Width="60" Height="44" Canvas.Left="82" Canvas.Top="31" Foreground="White" TextAlignment="Center" FontSize="32"/>
	</Canvas>
</UserControl>