    <Style TargetType="ListBox" x:Key="ResourceTasksListBoxStyle">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Width" Value="478" />
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Border BorderThickness="10,0,0,0" 
                                Margin="2" Padding="5"                            
                                BorderBrush="{StaticResource AllscriptsHighPriorityTaskBrush}"
                            >
                        <Grid Width="444" >
                            <Grid.RowDefinitions>
                                <RowDefinition x:Name="Subject"></RowDefinition>
                                <RowDefinition x:Name="TaskCodeWithPriority"></RowDefinition>
                                <RowDefinition x:Name="PatientRow"></RowDefinition>
                                <RowDefinition x:Name="PhyscianRow"></RowDefinition>
                                <RowDefinition x:Name="SpacerLineRow"></RowDefinition>
                                <RowDefinition x:Name="TaskStatusRow"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Row="0" Grid.ColumnSpan="3">
                                <TextBlock Text="{Binding Subject}" Style="{StaticResource AllscriptsListItemTitleTextStyle}"/>
                            </Grid>
                            <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                                <TextBlock Text="{Binding Priority.Name, Converter={StaticResource PrefixedValueConverter}, ConverterParameter='Priority:'}" Style="{StaticResource AllscriptsListItemNormalTextStyle}"/>
                            </Grid>
                            <Grid Grid.Row="1" Grid.Column="2">
                                <TextBlock Text="{Binding DueDate, Converter={StaticResource DateConverter}}" Style="{StaticResource AllscriptsListItemNormalTextStyle}" TextAlignment="Right"/>
                            </Grid>
                            <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                                <TextBlock Text="{Binding TaskCode, Converter={StaticResource PrefixedValueConverter}, ConverterParameter='Task Code:'}" Style="{StaticResource AllscriptsListItemNormalTextStyle}"/>
                            </Grid>
                            <Grid Grid.Row="2" Grid.Column="2" >
                                <TextBlock Text="{Binding DueDate, Converter={StaticResource ScheduledTimeConverter}}" Style="{StaticResource AllscriptsListItemNormalTextStyle}" TextAlignment="Right"/>
                            </Grid>
                            <Grid Grid.Row="3" Grid.ColumnSpan="2" >
                                <TextBlock Text="{Binding Patient.FullName, Converter={StaticResource PrefixedValueConverter}, ConverterParameter='Patient:'}" Style="{StaticResource AllscriptsListItemNormalTextStyle}"/>
                            </Grid>
                            <Grid Grid.Row="4" Grid.ColumnSpan="3">
                                <Border 
                                    x:Name="BottomLine"
                                    BorderThickness="0,0,0,2"
                                    BorderBrush="{StaticResource AllscriptWhiteBrush}"/>
                            </Grid>

                            <Grid Grid.Row="5" Grid.Column="2">

                                <Path 
                                    x:Name="BalloonStem"
                                    Stretch="Fill"
                                    Data="M1,0 L0,0 L0,1 z"                                     
                                    Fill="#FFFFFF"
                                    StrokeThickness="0"
                                    Height="25" 
                                    Width="25"
                                    Grid.Row="1" 
                                    VerticalAlignment="Top" 
                                    Margin="0,-1,-123,0" 
                                    UseLayoutRounding="True" />
                                <TextBlock Text="{Binding Status.Name}" Style="{StaticResource AllscriptsListItemHighlightTextStyle}"  />
                            </Grid>
                        </Grid>
                    </Border>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

