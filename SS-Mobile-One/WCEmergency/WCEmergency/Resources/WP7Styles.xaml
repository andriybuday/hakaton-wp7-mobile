    <Style TargetType="ListBox" x:Key="VisitFrequencyListBoxStyle">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="ItemContainerStyle" Value="{StaticResource ListBoxItemStyle}" />
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Border Style="{StaticResource AllscriptsGridBorderStyle}" HorizontalAlignment="Stretch">
                        <Grid Margin="10,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".6*"></ColumnDefinition>
                                <ColumnDefinition Width=".4*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                                <TextBlock Text="Disc: " Style="{StaticResource AllscriptsListItemInactiveGreyTextStyle}"/>
                                <TextBlock Text="{Binding DisciplineCode}" Style="{StaticResource AllscriptsListItemNormalText_Orders_Style}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="0 0 10 0" HorizontalAlignment="Left" Orientation="Vertical">
                                <StackPanel Orientation="Horizontal"  Visibility="{Binding StartDate, Converter={StaticResource VisibilityConverter}}">
                                    <TextBlock Text="SD: " Style="{StaticResource AllscriptsListItemInactiveGreyTextStyle}"/>
                                    <TextBlock Text="{Binding StartDate, Converter={StaticResource DateConverter}}"
                                           Style="{StaticResource AllscriptsListItemNormalText_Orders_Style}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Visibility="{Binding EndDate, Converter={StaticResource VisibilityConverter}}" >
                                    <TextBlock Text="ED: " Style="{StaticResource AllscriptsListItemInactiveGreyTextStyle}"
                                           />
                                    <TextBlock Text="{Binding EndDate, Converter={StaticResource DateConverter}}"
                                           Style="{StaticResource AllscriptsListItemNormalText_Orders_Style}"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                        Visibility="{Binding Period,Converter={StaticResource VisibilityConverter}}" Margin="0 0 10 0">
                                <TextBlock Text="every " Style="{StaticResource AllscriptsListItemNormalText_Orders_Style}"
										   Visibility="{Binding Period, Converter={StaticResource PeriodPrefixEveryVisibilityConverter}}"/>
                                <TextBlock Text="{Binding VisitLow}" Style="{StaticResource AllscriptsListItemNormalText_Orders_Style}"/>
                                <TextBlock Text="-" Style="{StaticResource AllscriptsListItemInactiveGreyTextStyle}" Visibility="{Binding VisitLow, Converter={StaticResource VisibilityConverter}}"/>
                                <TextBlock Text="{Binding VisitHigh}" Style="{StaticResource AllscriptsListItemNormalText_Orders_Style}" />
                                <TextBlock Text=" " Style="{StaticResource AllscriptsListItemInactiveGreyTextStyle}" />
                                <TextBlock Text="x " Style="{StaticResource AllscriptsListItemInactiveGreyTextStyle}"
										   Visibility="{Binding Period, Converter={StaticResource PeriodPrefixEveryInvertedVisibilityConverter}}"/>

                                <StackPanel  Orientation="Horizontal" Margin="0 0 0 0" Visibility="{Binding Period, Converter={StaticResource PeriodPrefixETextVisibilityConverter}}">
                                    <TextBlock Text="{Binding Period, Converter={StaticResource PeriodConverter}}" Style="{StaticResource AllscriptsListItemNormalText_Orders_Style}"/>
                                    <TextBlock Text="s" Style="{StaticResource AllscriptsListItemNormalText_Orders_Style}"
										   Visibility="{Binding VisitLow, Converter={StaticResource PluralVisibilityConverter}}"/>
                                    <TextBlock Text=" x " Style="{StaticResource AllscriptsListItemInactiveGreyTextStyle}"/>
                                    <TextBlock Text="{Binding Duration}" Style="{StaticResource AllscriptsListItemNormalText_Orders_Style}"/>
                                    <TextBlock Text=" " Style="{StaticResource AllscriptsListItemNormalText_Orders_Style}"/>
                                    <TextBlock Text="{Binding Period, Converter={StaticResource PeriodConverter}}" Style="{StaticResource AllscriptsListItemNormalText_Orders_Style}"/>
                                    <TextBlock Text="s" Style="{StaticResource AllscriptsListItemNormalText_Orders_Style}"
										   Visibility="{Binding Duration, Converter={StaticResource PluralVisibilityConverter}}"/>
                                    <TextBlock Text=", " Style="{StaticResource AllscriptsListItemNormalText_Orders_Style}" Visibility="{Binding Hours, Converter={StaticResource SimpleVisibilityConverter}}"/>
                                    <TextBlock Text="{Binding Hours, Converter={StaticResource DurationFromMinutesTextConverter}}" Style="{StaticResource AllscriptsListItemNormalText_Orders_Style}" Visibility="{Binding Hours, Converter={StaticResource SimpleVisibilityConverter}}"/>
                                    <TextBlock Text=" duration" Style="{StaticResource AllscriptsListItemNormalText_Orders_Style}" Visibility="{Binding Hours, Converter={StaticResource SimpleVisibilityConverter}}"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
										Orientation="Horizontal" HorizontalAlignment="Stretch"
										Visibility="{Binding PRN, Converter={StaticResource VisibilityConverter}}" 
										Margin="0 0 10 0">
                                <TextBlock Text="PRN: " Style="{StaticResource AllscriptsListItemInactiveGreyTextStyle}"/>
                                <TextBlock Text="{Binding PRN}" Style="{StaticResource AllscriptsListItemShiftedText_Orders_Style}"/>
                                <TextBlock Text=", " Style="{StaticResource AllscriptsListItemNormalText_Orders_Style}" Visibility="{Binding Hours, Converter={StaticResource SimpleVisibilityConverter}}"/>
                                <TextBlock Text="{Binding Hours, Converter={StaticResource DurationFromMinutesTextConverter}}" Style="{StaticResource AllscriptsListItemNormalText_Orders_Style}" Visibility="{Binding Hours, Converter={StaticResource SimpleVisibilityConverter}}"/>
                                <TextBlock Text=" duration" Style="{StaticResource AllscriptsListItemNormalText_Orders_Style}" Visibility="{Binding Hours, Converter={StaticResource SimpleVisibilityConverter}}"/>
                            </StackPanel>

                            <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Visibility="{Binding PRN, Converter={StaticResource VisibilityConverter}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Reason:" Style="{StaticResource AllscriptsListItemInactiveGreyTextStyle}"
											   Grid.Row="0" Grid.Column="0"/>
                                <TextBlock Grid.Row="0" Grid.Column="1"
											   Text="{Binding PRNReason}"
											   Style="{StaticResource AllscriptsListItemShiftedText_Orders_Style}"
											   TextWrapping="Wrap"
											   HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
                            </Grid>

                            <TextBlock Text="Scheduling Notes:" Grid.Row="5" Grid.ColumnSpan="2" Style="{StaticResource AllscriptsListItemInactiveGreyTextStyle}" Visibility="{Binding SchedulingNotes, Converter={StaticResource VisibilityConverter}}" />
                            <TextBlock Text="{Binding SchedulingNotes}" Grid.Row="6" Grid.ColumnSpan="2"  Style="{StaticResource AllscriptsListItemShiftedText_Orders_Style}" TextWrapping="Wrap" Visibility="{Binding SchedulingNotes, Converter={StaticResource VisibilityConverter}}" Margin="0 0 10 0"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>


